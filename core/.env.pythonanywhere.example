# ==============================================
# PythonAnywhere Environment Variables Example
# ==============================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# Komut: cp .env.pythonanywhere.example .env

# ========================
# DJANGO CORE SETTINGS
# ========================

# Environment (pythonanywhere olarak bırakın)
DJANGO_ENV=pythonanywhere

# Debug Mode (Production'da False olmalı)
DEBUG=False

# Secret Key - GÜVENLİ BİR ANAHTAR OLUŞTURUN!
# Python ile rastgele oluşturmak için:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=pythonanywhere-gizli-anahtar-buraya-50-karakterden-uzun-rastgele-bir-key-yazin

# Allowed Hosts - PythonAnywhere kullanıcı adınızı yazın
# Format: kullaniciadi.pythonanywhere.com
ALLOWED_HOSTS=.pythonanywhere.com,kullaniciadi.pythonanywhere.com

# ========================
# CSRF TRUSTED ORIGINS
# ========================

CSRF_TRUSTED_ORIGINS=https://kullaniciadi.pythonanywhere.com,https://*.pythonanywhere.com

# ========================
# CLOUDINARY SETTINGS (OPSIYONEL)
# ========================
# Medya dosyalarını Cloudinary'de saklamak için
# Ücretsiz hesap: https://cloudinary.com

CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================
# ADMIN SETTINGS
# ========================

# Admin panel URL (güvenlik için değiştirilebilir)
ADMIN_URL=admin/

# ========================
# EMAIL SETTINGS (OPSIYONEL)
# ========================
# Email göndermek için SMTP ayarları

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Production için SMTP kullanın:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# ========================
# DEEPL TRANSLATION (OPSIYONEL)
# ========================
# Otomatik çeviri için DeepL API
# Ücretsiz hesap: https://www.deepl.com/pro-api

# DEEPL_AUTH_KEY=your-deepl-api-key

# ========================
# PYTHONANYWHERE SPECIFIC
# ========================

# File upload limits (bytes)
FILE_UPLOAD_MAX_MEMORY_SIZE=2097152
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# ========================
# KULLANIM TALİMATLARI
# ========================

# 1. Bu dosyayı .env olarak kopyalayın:
#    cp .env.pythonanywhere.example .env

# 2. SECRET_KEY için rastgele anahtar oluşturun:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

# 3. ALLOWED_HOSTS'ta kullaniciadi kısmını değiştirin

# 4. Cloudinary kullanacaksanız bilgilerinizi girin

# 5. Dosyayı kaydedin

# 6. Web app'i reload edin
